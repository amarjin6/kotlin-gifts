<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"

    package="am2023.pong">

    <application
        android:allowBackup="true"
        android:icon="@mipmap/pong"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/pong"
        android:supportsRtl="true"
        android:theme="@android:style/Theme.Holo.Dialog.NoActionBar"
        tools:ignore="GoogleAppIndexingWarning">

        <activity
            android:name="am2023.pong.activity.MainActivity"
            android:screenOrientation="landscape"
            android:theme="@style/Full">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name="am2023.pong.activity.SettingsActivity"
            android:screenOrientation="landscape"
            android:theme="@style/Full"></activity>
        <activity
            android:name="am2023.pong.activity.GameActivity"
            android:label="@string/app_name"
            android:screenOrientation="landscape"
            android:theme="@style/Full"></activity>
    </application>

</manifest>